<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pattern_recycler_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pattern_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/pattern_clickable_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/pattern_recycler"
        android:layout_alignEnd="@id/pattern_recycler"
        android:layout_alignStart="@id/pattern_recycler"
        android:layout_alignTop="@id/pattern_recycler"
        android:layout_gravity="center"
        android:alpha="0"
        android:background="@color/colorAccent"
        android:scaleType="fitXY" />

</RelativeLayout>