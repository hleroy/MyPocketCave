<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/selected_range_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/horizontal_margin_between_elements"
        android:layout_marginStart="@dimen/horizontal_big_margin"
        android:text="0 - 5 "
        android:textSize="@dimen/text_size"
        android:textStyle="bold" />

    <View
        android:id="@+id/total_range"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/horizontal_margin_between_elements"
        android:layout_marginStart="@dimen/horizontal_margin_between_elements"
        android:layout_toEndOf="@id/selected_range_text"
        android:background="@color/colorAccent" />

    <View
        android:id="@+id/selected_range"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignEnd="@+id/selected_max"
        android:layout_alignStart="@+id/selected_min"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/horizontal_big_margin"
        android:layout_marginStart="@dimen/horizontal_big_margin"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@id/selected_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/total_range"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:src="@drawable/price_on" />

    <ImageView
        android:id="@id/selected_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/total_range"
        android:layout_centerVertical="true"
        android:layout_marginStart="150dp"
        android:src="@drawable/price_on" />

</RelativeLayout>