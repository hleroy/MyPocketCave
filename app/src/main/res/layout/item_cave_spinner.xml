<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/cave_spinner_cave_type"
        android:layout_width="@dimen/cave_image_size_small"
        android:layout_height="@dimen/cave_image_size_small"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/horizontal_margin_between_elements"
        android:src="@drawable/cave_fridge" />

    <TextView
        android:id="@+id/cave_spinner_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/cave_spinner_cave_type"
        android:text="@string/cave_name"
        android:textSize="@dimen/text_size" />

</android.support.percent.PercentRelativeLayout>
